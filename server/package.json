    "express-session": "^1.18.1",
    "global": "^4.4.0",
    "lodash": "^4.17.21",
    "mongoose": "^8.8.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "redis": "^4.6.7",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.2.0",
    "seedrandom": "^3.0.5",
    "socket.io": "^4.7.1",
    "socket.io-adapter": "^2.5.5",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
